<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- CRITICAL: NO console appender - STDIO is used for JSON-RPC protocol -->
    <!-- ANY output to stdout/stderr will corrupt the MCP protocol -->

    <property name="LOG_FILE" value="${LOG_FILE:-logs/jfr-shell-mcp.log}"/>
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>

    <!-- File appender ONLY -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- Suppress Spring Boot startup noise -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.springframework.boot" level="WARN"/>

    <!-- Application logging -->
    <logger name="io.jafar.mcp" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="FILE"/>
    </root>
</configuration>
